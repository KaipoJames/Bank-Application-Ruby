<%= bootstrap_form_with(model: @credit_card, local: true, layout: :horizontal,
                label_col: "col-sm-2", control_col: "col-sm-10") do |f| %>
<%= f.alert_message "Please Fix The Errors Below.", error_summary: false %>
<%= f.text_field :number %>
<%= f.text_field :security_code %>
<%= f.number_field :expiration_date %>
<%= f.form_group do %>
<%= f.primary "Create Credit Card" %>
<% end %>
<% end %>