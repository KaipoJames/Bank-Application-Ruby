<%= bootstrap_form_with(model: [@account, @transaction], local: true, 
    layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-10") do |f|%>
        <%= f.alert_message "Please fix the errors below.", error_summary: false %>
        <%= f.text_field :transaction_type %>
        <%= f.text_field :amount %>
        <%= f.text_area :description %>
        <%= f.form_group do %>
            <%= f.primary @transaction.persisted? ? "Update Transaction" : "Create Transaction" %>
        <% end %>
    <% end %>